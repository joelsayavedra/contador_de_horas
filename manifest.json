{
    "manifest_version": 3,
    "name": "Netsoft time tracker",
    "version": "1.0",
    "description": "Extensi√≥n para obtener la suma del tiempo invertido por proyecto",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "bear.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["https://639296.app.netsuite.com/*"],
            "js": ["js/contentScript.js"]
        }
    ]
}